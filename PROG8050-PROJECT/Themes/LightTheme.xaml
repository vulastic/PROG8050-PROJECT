<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<!-- Fonts -->
	<FontFamily x:Key="Poppins">application:,,,/Fonts/#Poppins</FontFamily>

	<Style x:Key="WindowFonts" TargetType="{x:Type Window}">
		<Setter Property="FontFamily" Value="Poppins"/>
		<Setter Property="FontSize" Value="12"/>
	</Style>

	<Style x:Key="PageFonts" TargetType="{x:Type Page}">
		<Setter Property="FontFamily" Value="Poppins"/>
		<Setter Property="FontSize" Value="12"/>
	</Style>

	<!-- Background Colors -->
	<SolidColorBrush x:Key="BackgroundPrimaryColor" Color="#ebebeb"/>
	<SolidColorBrush x:Key="BackgroundSecondaryColor" Color="#f9f9f9"/>

	<!-- Primary Colors -->
	<SolidColorBrush x:Key="BluePrimaryColor" Color="#6168FF"/>
	<SolidColorBrush x:Key="BlueSecondaryColor" Color="#D1D4FC"/>
	<SolidColorBrush x:Key="RedPrimaryColor" Color="#FF5574"/>
	<SolidColorBrush x:Key="RedSecondaryColor" Color="#FFE7EB"/>

	<!-- Typograhy Colors -->
	<SolidColorBrush x:Key="TextPrimaryColor" Color="#222222"/>
	<SolidColorBrush x:Key="TextSecondaryColor" Color="#5E6576"/>
	<SolidColorBrush x:Key="TextHighlightedColor" Color="#000000"/>
	<SolidColorBrush x:Key="TextDisabledColor" Color="#8D929E"/>
	<SolidColorBrush x:Key="TextContrastColor" Color="#FFFFFF"/>

	<!-- Icons Colors -->
	<SolidColorBrush x:Key="IconPrimaryColor" Color="#222222"/>
	<SolidColorBrush x:Key="IconSecundaryColor" Color="#5E6576"/>
	<SolidColorBrush x:Key="IconActionColor" Color="#F72626"/>

</ResourceDictionary>